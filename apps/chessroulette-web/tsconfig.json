{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@xmatter/util-kit": [
        "util-kit/src/index.ts"
      ],
      "@app/*": [
        "apps/chessroulette-web/*"
      ],
      // "@components/*": [
      //   "apps/chessroulette-web/components/*"
      // ],
      // "@modules/*": [
      //   "apps/chessroulette-web/modules/*"
      // ],
      // "@services/*": [
      //   "apps/chessroulette-web/services/*"
      // ],
      // "@providers/*": [
      //   "apps/chessroulette-web/providers/*"
      // ],
      // "@config": [
      //   "apps/chessroulette-web/config/index.ts"
      // ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "../../util-kit/**/*.ts",
    // "../../apps/chessroulette-web/.next/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "dist",
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js",
    ".next"
  ]
}